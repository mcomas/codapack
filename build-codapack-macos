#!/bin/zsh

ROOT="$(dirname "$0")"
unset R_HOME
export JAVA_HOME=$ROOT/jdk-17.0.7.jdk/Contents/Home
export PATH=$JAVA_HOME/bin:$PATH
export R_HOME=$(R RHOME)
export R_LIBS_USER=$ROOT/Rlibraries

#R

cd $ROOT
apache-maven-3.9.2/bin/mvn package && apache-maven-3.9.2/bin/mvn dependency:copy-dependencies && Rscript -e "TYPE='mac.binary'; source('install_packages.R')"